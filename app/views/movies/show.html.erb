<div class="min-h-screen bg-gray-900 text-white flex flex-col lg:flex-row">
  <!-- Poster Section -->
  <div class="lg:w-1/3">
    <div class="h-full bg-gray-800 flex justify-center items-center">
      <%= image_tag("https://image.tmdb.org/t/p/original#{@movie['poster_path']}", alt: @movie['title'], class: "h-auto max-w-full") %>
    </div>
  </div>

  <!-- Description Section -->
  <div class="lg:w-2/3">
    <div class="container mx-auto mt-8 px-4">
      <h1 class="text-3xl font-bold mb-4"><%= @movie['title'] %></h1>
      <p class="text-lg"><strong>ID:</strong> <%= @movie['id'] %></p>
      <p class="text-lg"><strong>Original Title:</strong> <%= @movie['original_title'] %></p>
      <p class="text-lg"><strong>Genres:</strong> <%= @movie['genre_ids']%></p>
      <p class="text-lg"><strong>Release Date:</strong> <%= @movie['release_date'] %></p>
      <p class="text-lg"><strong>Popularity:</strong> <%= @movie['popularity'] %></p>
      <p class="text-lg"><strong>Total Budget:</strong> <%= @movie['budget'] %></p>
      <p class="text-lg mt-8"><strong>Description:</strong> <%= @movie['overview'] %></p>
    </div>
  </div>
</div>

